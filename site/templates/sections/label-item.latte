<section class="uk-height-viewport uk-padding-small">
   
    <div 
        class="uk-height-viewport uk-grid-small" uk-grid
        uk-scrollspy="cls: uk-animation-fade; target: > div; delay: 550; repeat: false;">

        {* release image *}    
        <div class="uk-width-1-2@m uk-margin-small-bottom"> 
            <img src="{$page->featured_image->first->url}" alt="" />
        </div>

        <div class="uk-width-1-2@m uk-margin-remove-bottom">
            <div class="uk-grid-collapse uk-child-width-auto@m" uk-grid>
                
                {* release type *}
                <div class="uk-text-secondary uk-text-default uk-margin-small-bottom">
                    <span class="uk-background-primary uk-border-rounded" style="padding:8px 5px 6px 5px;">
                    <span class="uk-margin-small-right icon-adjust" uk-icon="icon: info; ratio: 1"></span>
                        {$page->release_type->first->title}
                    </span>

                    {* catalog number *}
                    <span class="uk-text-secondary uk-text-default uk-text-middle uk-margin-small-left uk-margin-small-right">
                        {$page->catalog_number}
                    </span>
                </div>
                

                {* release date *}
                <div class="uk-text-secondary uk-text-default">                
                    <span class="uk-background-secondary uk-border-rounded" style="padding:8px 5px 6px 5px;">
                    <span class="uk-margin-small-right icon-adjust" uk-icon="icon: calendar; ratio: 1"></span>
                        Release Date
                    </span>                        
                    
                    <span class="uk-text-secondary uk-text-default uk-text-middle uk-margin-small-left uk-margin-small-right">
                        {$page->date|replace(' 00:00:00', '')}
                    </span>
                </div>

            </div>
        
            <br>
            
            {* release title *}
            <div class="sb-font uk-heading-large uk-margin-remove" style="line-height:1em;">
                {$page->title}
            </div>

            <br>
            
        

            <div class="uk-width-1-1 uk-child-width-expand@m" uk-grid>
                
                {* column one *}
            
                <div>
                    {* spirit bomb artist *}
                    <div class="uk-text-muted uk-text-large uk-margin-small-bottom">
                        Virtual Artist
                    </div>

                    <span class="uk-heading-small">                                    
                        {foreach $page->artist as $index => $artist}
                            {if ($index+1) < count($page->artist)}
                                <span class="uk-text-secondary">
                                    {$artist->title} / 
                                </span>
                            {else}
                                <span class="uk-text-secondary">
                                    {$artist->title} 
                                </span>
                            {/if}
                        {/foreach}                                       
                    </span>

                    <br>

                    {* featuring collaborators *}
                    <p class="uk-text-secondary uk-text-large uk-margin-medium-bottom">
                        <span class="uk-text-muted">Collaborators</span>
                        <br>
                        {foreach $page->collaborator as $index => $collab}
                            {if ($index+1) < count($page->collaborator)}
                                <span class="uk-text-capitalize uk-text-large">
                                    {if $collab??->link}
                                        <a class="smallExternalSVG uk-text-secondary" href="{$collab->link}" target="_blank">{$collab->title}</a><br>
                                    {else}
                                        {$collab->title}
                                    {/if}
                                </span>
                            {else}
                                <span class="uk-text-capitalize uk-text-large">
                                    {if $collab??->link}
                                        <a class="smallExternalSVG uk-text-secondary" href="{$collab->link}" target="_blank">{$collab->title}</a>
                                    {else}
                                        {$collab->title}
                                    {/if}
                                </span>
                            {/if}
                        {/foreach}
                    </p>

                </div>    

                {* column two *}

                <div class="uk-margin-medium-bottom uk-margin-remove-top">

                    {* platform icons *}
                    <div class="uk-flex uk-flex-column uk-margin-medium-bottom" uk-grid>
                        <div class="uk-text-large uk-text-muted">
                            <p class="uk-margin-small-bottom">Platforms</p>
                        </div>

                        {foreach $page->children() as $platform}                                            
                            <div class="uk-margin-small-bottom uk-margin-remove-top">
                                <a class="noTextDecoration noExternalSVG" href="{$platform->platform_url}" target="_blank" alt="{$platform->title}">                  
                                    <img src="{$platform->platform_icon->featured_image->first->url}" class="uk-margin-small-right music-platforms" /></a>

                                <a class="smallExternalSVG uk-text-secondary" href="{$platform->platform_url}" target="_blank" alt="{$platform->title}">
                                    {$platform->title}
                                </a>
                            </div>
                        {/foreach}

                    </div>

                    <div class="uk-text-secondary uk-text-small uk-margin-medium-bottom">

                        <div class="uk-text-large uk-text-muted">
                            <p class="uk-margin-small-bottom">Information</p>
                        </div>
                    
                        {* Digital Release Disclaimer *}
                        <span class="uk-margin-small-right uk-margin-small-bottom" uk-icon="icon: info; ratio: 1"></span>
                        <span>Digital (Only) Format</span>
                        </span>
                        <br>

                        {* categories / tags *}
                        <span class="uk-margin-small-right uk-margin-small-bottom" uk-icon="icon: tag; ratio: 1"></span>
                        {foreach $page->genre_tags as $index => $tags}
                            {if ($index+1) < count($page->genre_tags)}
                                <span class="uk-text-secondary uk-button uk-button-text uk-text-small">
                                    {$tags->title},
                                </span>
                            {else}
                                <span class="uk-text-secondary uk-button uk-button-text uk-text-small">
                                    {$tags->title}
                                </span>
                            {/if}
                        {/foreach}
                        </span>
                        <br>

                        {* Wiki link *}
                        <span class="uk-margin-small-right" uk-icon="icon: database; ratio: 1"></span>
                        <span>View this release in the <a class="smallExternalSVG uk-text-secondary" href="{$page->wiki_link}" target="_blank">
                            Wiki</a>
                        </span>

                    </div>


                </div>    
            </div>

        </div>


    </div>
    
    <div class="uk-padding-medium" uk-flex uk-scrollspy="cls:uk-animation-fade">
        {foreach $page->video_embed as $video}
            <div class="uk-padding-large">
                <div class="video-container uk-margin-medium-bottom">
                    {$video->embed_code|noescape}
                </div>
            </div>
        {/foreach}
    </div>

</section>